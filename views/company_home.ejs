    <!DOCTYPE html>
    <html lang="en">
    <% include header %>
    <body>
    <% include profile_navbar %>
    <div class="container">
        <div class="header clearfix">
            <nav>
                <ul class="nav nav-pills pull-right">
                    <li role="presentation" class="active"><a href="index.ejs">Home</a></li>
                    <li role="presentation"><a href="#">About</a></li>
                    <li role="presentation"><a href="#">Contact</a></li>
                </ul>
            </nav>
            <h3 class="text-muted">Project name</h3>
        </div>

        <div class="container">
            <div class="well well-sm">
                <div class="media">
                    <div class="row">
                        <div class="col-md-4">
                            <img class="media-object" src=<%=Company.imageUrl%>>
                            <div class="media-body">
                                <h4 class="media-heading"><%=Company.name%></h4>
                                <h4 class="media-heading"><%=Company.description%></h4>
                                <span><h4 class="media-heading"><strong><%=connection_count%></strong> connections</h4></span>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <textarea class="form-control" name="status_input" rows="3"></textarea>
                            <br>
                            <div class="pull-right">
                                <form class="form-horizontal" method="post" action="/company/<%=Company.companyId%>/status">
                                    <button type="submit" class="btn btn-primary">Post new status</button>
                                </form>
                                <br>
                                <br>
                                <br>
                                <form class="form-horizontal" method="get" action="/company/<%=Company.companyId%>/edit_profile">
                                    <button type="submit" class="btn btn-primary">Edit profile</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!--container!-->

                <li role="presentation"><a href="#">Contact</a></li>
            </ul>
        </nav>
        <h3 class="text-muted">Project name</h3>
      
    </div>
    <form method="post" action="/company/<%=companyId%>/job" class="form-horizontal">
        <div id="job">
            <center>
                <h4>Post A Job</h4>
               <div class="form-group required">
                    <div class="col-lg-2 control-label">
                        <label>position: </label>
                    </div>
                    <div class="col-lg-10">
					 <input type="text" class="form-control" name="position"  placeholder="Input job position" required="required">
                    </div>
                </div>
                <div class="form-group required">
                    <div class="col-lg-2 control-label">
                        <label>Description: </label>
                    </div>
                    <div class="col-lg-10">
					<textarea class="form-control" name="location" rows="4" required="required"></textarea>
                    </div>
                </div>
				<div class="form-group required">
                    <div class="col-lg-2 control-label">
                        <label>Location: </label>
                    </div>
                    <div class="col-lg-10">
					 <input type="text" class="form-control" name="description" placeholder="Input job location" required="required">
                    </div>
                </div>
				<div class="form-group required">
                    <div class="col-lg-2 control-label">
                        <label>Expire Date </label>
                    </div>
                    <div class="col-lg-10">
					<input type="date" class="form-control" name="expires" id="todate" placeholder="Enter expiry date of the job" required="required">
                    </div>
                </div>
			 </center>
        </div>

        <div class="pull-right">
            <button type="submit" class="btn btn-success btn-lg">Save</button>
        </div>
    </form>
   
